<section class="tariffing">
  {{> heading 
    tag="h2"
    class="tariffing__title"
    text="Transparent Rates<br>for Internet Acquiring"
  }}
  <div class="tariffing__columns">
    <div class="tariffing__column">
      {{> link
        class="tariffing__link"
        href="#"
        label="What is Internet Acquiring?"
      }}
      <h3 class="tariffing__heading">Rate for Companies with a Turnover of More Than $20,000 per Month</h3>
      <table class="tariffing__table">
        <thead class="tariffing__table-head">
          <tr class="tariffing__table-row">
            <th class="tariffing__table-cell">Payment Methods</th>
            <th class="tariffing__table-cell">Commission</th>
          </tr>
        </thead>
        <tbody class="tariffing__table-body">
          <tr class="tariffing__table-row">
            <td class="tariffing__table-cell">Bank Cards</td>
            <td class="tariffing__table-cell">from 1.2%</td>
          </tr>
          <tr class="tariffing__table-row">
            <td class="tariffing__table-cell">Electronic Money</td>
            <td class="tariffing__table-cell">from 1.8%</td>
          </tr>
          <tr class="tariffing__table-row">
            <td class="tariffing__table-cell">Cash</td>
            <td class="tariffing__table-cell">from 1.2%</td>
          </tr>
          <tr class="tariffing__table-row">
            <td class="tariffing__table-cell">Internet Banking</td>
            <td class="tariffing__table-cell">from 2%</td>
          </tr>
          <tr class="tariffing__table-row">
            <td class="tariffing__table-cell">Payouts to Cards</td>
            <td class="tariffing__table-cell">from 0.8%</td>
          </tr>
        </tbody>
      </table>
      {{> button
        class="tariffing__button"
        fill=true
        shadowGreen=true
        label="Determine Your Rate"
      }}
    </div>
    <div class="tariffing__column">
      <div class="tariffing__comission">
        {{> info-card
          class="tariffing__card tariffing__card--transparent"
          title="Flexible Rates"
          description="RBK.money's tariff plans adapt to the client's turnover: as volumes increase, the commission decreases."
        }}
        {{> info-card
          class="tariffing__card"
          title="Individual Approach"
          description="It doesn't matter to us whether it's a large online business or a budding entrepreneur, we will find the most beneficial rate for everyone and provide high-quality service."
          buttonLabel="Learn More"
        }}
      </div>
    </div>
  </div>
</section>

